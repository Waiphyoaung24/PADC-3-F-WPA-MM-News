<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    app:cardElevation="4dp"
    android:id="@+id/cv_news_item_root"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/iv_publication_logo"
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:src="@drawable/img_publication_logo">

        </ImageView>

        <TextView
            android:id="@+id/tv_publication_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/iv_publication_logo"
            android:text="Eleven Media"
            android:textColor="@color/primary_text"
            android:textSize="16sp"

            />

        <TextView
            android:id="@+id/tv_publication_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_publication_title"
            android:layout_below="@id/tv_publication_title"
            android:layout_marginTop="4dp"
            android:text="Posted At: Jan 01- 6:30AM"
            android:textColor="@color/secondary_text"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_publication_logo"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.3"
            android:maxLines="3"
            android:text="@string/myanmar_news"
            android:textColor="@color/primary_text"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_news_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_news"
            android:layout_centerInParent="true"
            android:layout_marginTop="8dp"
            android:src="@drawable/img_dummy_news"

            />

        <LinearLayout
            android:id="@+id/ll_user_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_news_pic"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3 Likes - 3 Comments - Sent to 6 people"
                android:textColor="@color/primary" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_user_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_user_feedback"
            android:orientation="horizontal"
            android:weightSum="2">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp">

                <TextView
                    android:id="@+id/btn_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:drawableLeft="@drawable/ic_chat_bubble_outline_black_24dp"
                    android:drawablePadding="16dp"
                    android:text="Comment"
                    android:textColor="@color/primary" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp">

                <TextView
                    android:id="@+id/btn_send_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:drawableLeft="@drawable/ic_send_black_24dp"
                    android:drawablePadding="16dp"
                    android:text="Send To"
                    android:textColor="@color/primary"

                    />


            </FrameLayout>


        </LinearLayout>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:padding="2dp"
            android:src="@drawable/ic_favorite_border_black_36dp" />

    </RelativeLayout>


</android.support.v7.widget.CardView>

