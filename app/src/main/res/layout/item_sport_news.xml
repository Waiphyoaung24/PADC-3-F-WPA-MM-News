<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:foo="http://schemas.android.com/tools"
    android:id="@+id/cv_sport_news_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:fitsSystemWindows="true"
    app:cardElevation="4dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <ImageView
            android:id="@+id/iv_fire_logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/img_fire_logo" />

        <TextView
            android:id="@+id/tv_top_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/iv_fire_logo"
            android:text="Top News"
            android:textColor="@color/primary_text"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_top_news_pic"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_below="@id/tv_top_news"
            android:layout_marginTop="15dp"
            android:foreground="@android:drawable/screen_background_dark_transparent"
            android:scaleType="centerCrop"
            android:src="@drawable/img_top_news_pic" />

        <TextView
            android:id="@+id/quote_top_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_top_news_pic"
            android:layout_margin="10dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/opensans_regular"
            android:text="What I do is play soccer which is what I like - Lionel Messi"
            android:textColor="@color/primary_text"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/iv_app_logo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/quote_top_news"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/img_logo" />

        <TextView
            android:id="@+id/tv_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/quote_top_news"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/iv_app_logo"
            android:fontFamily="@font/opensans_regular"
            android:text="One Football"
            android:textColor="@color/secondary_text" />

        <TextView
            android:id="@+id/tv_divider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tv_app_name"
            android:layout_marginTop="18dp"
            android:background="@color/divider" />

        <ImageView
            android:id="@+id/iv_news1"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_below="@+id/tv_divider1"
            android:layout_margin="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_news1_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_divider1"
            android:layout_margin="8dp"
            android:id="@+id/tv_news_1"
            android:layout_toRightOf="@+id/iv_news1"
            android:text="Real Madrid dominate Champions League Team of ..."
            android:textColor="@color/primary_text"
            android:textSize="15sp" />
        <ImageView
            android:id="@+id/iv_app_logo_news_1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/tv_news_1"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/img_logo" />

        <TextView
            android:id="@+id/tv_app_name_news_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_news_1"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/iv_app_logo"
            android:fontFamily="@font/opensans_regular"
            android:text="One Football"
            android:textColor="@color/secondary_text" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:id="@+id/tv_divider_2"
            android:layout_below="@+id/tv_app_name_news_1"
            android:layout_marginTop="12dp"/>
        <ImageView
            android:id="@+id/iv_news2"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_below="@+id/tv_divider_2"
            android:layout_margin="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_news2_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_divider_2"
            android:layout_margin="8dp"
            android:id="@+id/tv_news_2"
            android:layout_toRightOf="@+id/iv_news2"
            android:text="Real Madrid dominate Champions League Team of ..."
            android:textColor="@color/primary_text"
            android:textSize="15sp" />
        <ImageView
            android:id="@+id/iv_app_logo_news_2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/tv_news_2"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/img_logo" />

        <TextView
            android:id="@+id/tv_app_name_news_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_news_2"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/iv_app_logo"
            android:fontFamily="@font/opensans_regular"
            android:text="One Football"
            android:textColor="@color/secondary_text" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:id="@+id/tv_divider_3"
            android:layout_below="@+id/tv_app_name_news_1"
            android:layout_marginTop="12dp"/>


    </RelativeLayout>


</android.support.v7.widget.CardView>